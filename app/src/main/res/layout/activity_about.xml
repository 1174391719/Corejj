<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zysp_gray_bg_color"
    tools:context=".activity.AboutActivity">

    <com.zyzxsp.view.HeaderTitleView
        android:id="@+id/about_header_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/nemo_green"
        app:headerCenterTitle="@string/title_str_about"
        app:headerLeftDrawbleVisibility="visiable">
    </com.zyzxsp.view.HeaderTitleView>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/about_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ainemo_white"
        app:layout_constraintTop_toBottomOf="@+id/about_header_view">
        <LinearLayout
            android:id="@+id/app_version_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/app_version_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                fresco:roundAsCircle="true"
                fresco:roundedCornerRadius="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                fresco:placeholderImage="@mipmap/icon_zyzx_tag"
                fresco:placeholderImageScaleType="fitCenter"/>
            <TextView
                android:id="@+id/app_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="27dp"
                android:textColor="@color/zysp_black_color"
                android:textSize="13sp"
                android:text="@string/test_title"/>
        </LinearLayout>


        <View
            android:id="@+id/view_margin1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/app_version_info_layout"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:background="@color/zysp_gray_bg_color">
        </View>
        <RelativeLayout
            android:id="@+id/check_update_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/view_margin1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/check_update_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/zysp_black_color"
                android:textSize="13sp"
                android:text="@string/check_app_update_str"/>

            <ImageView
                android:id="@+id/check_update_image_view"
                android:layout_width="7dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_right_gray"/>

        </RelativeLayout>



    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>