<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/zysp_gray_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserInfoActivity">

    <com.zyzxsp.view.HeaderTitleView
        android:id="@+id/userinfo_header_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/nemo_green"
        app:headerCenterTitle="@string/user_info_title"
        app:headerLeftDrawbleVisibility="visiable">
    </com.zyzxsp.view.HeaderTitleView>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_header_view"
        android:background="@color/ainemo_white"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent">

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/user_name_str_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/zysp_gray_color"
                android:textSize="12sp"
                android:text="@string/user_info_name_str"/>
            <TextView
                android:id="@+id/user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/zysp_black_color"
                android:textSize="13sp"
                android:text="11111"/>
        </RelativeLayout>

        <View
            android:id="@+id/view_line1"
            style="@style/division_line_style"
            app:layout_constraintTop_toBottomOf="@+id/name_layout"></View>

        <RelativeLayout
            android:id="@+id/user_account_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/user_account_str_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/zysp_gray_color"
                android:textSize="12sp"
                android:text="@string/user_info_account_str"/>
            <TextView
                android:id="@+id/user_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/zysp_black_color"
                android:textSize="13sp"
                android:text="222"/>
        </RelativeLayout>


        <View
            android:id="@+id/view_line2"
            style="@style/division_line_style"
            app:layout_constraintTop_toBottomOf="@+id/user_account_layout"></View>

        <RelativeLayout
            android:id="@+id/user_mailbox_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/user_mailbox_str_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/zysp_gray_color"
                android:textSize="12sp"
                android:text="@string/user_info_mailbox_str"/>


            <TextView
                android:id="@+id/user_mailbox_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:textColor="@color/zysp_black_color"
                android:textSize="13sp"
                android:text="222"/>
        </RelativeLayout>

        <View
            android:id="@+id/view_line3"
            style="@style/division_line_style"
            app:layout_constraintTop_toBottomOf="@+id/user_mailbox_layout"></View>

        <View
            android:id="@+id/view_margin"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/zysp_gray_bg_color"
            app:layout_constraintTop_toBottomOf="@+id/view_line3">

        </View>
        <RelativeLayout
            android:id="@+id/modify_password_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/zysp_black_color"
                android:text="@string/user_info_modify_password_str"/>
            <ImageView
                android:layout_width="7dp"
                android:layout_height="11dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_right_gray"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_line4"
            style="@style/division_line_style"
            app:layout_constraintTop_toBottomOf="@+id/modify_password_layout"></View>

        <TextView
            android:id="@+id/login_out"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/view_line4"
            android:textColor="@color/zysp_text_red_color"
            android:textSize="14sp"
            android:text="@string/user_info_loginout_str"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>