<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_20"
    tools:context=".activity.ModifyPasswordActivity">

    <com.zyzxsp.view.HeaderTitleView
        android:id="@+id/modify_password_header_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/nemo_green"
        app:headerCenterTitle="@string/title_str_modify_password"
        app:headerLeftDrawbleVisibility="visiable">
    </com.zyzxsp.view.HeaderTitleView>

    <TextView
        android:id="@+id/old_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/modify_password_header_view"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="@string/modify_old_password"/>

    <RelativeLayout
        android:id="@+id/old_passowrd_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_password_text"
        android:background="@color/ainemo_white">

        <EditText
            android:id="@+id/input_old_password_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorTransparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/see_old_password"
            android:inputType="textPassword"
            android:hint="@string/modify_old_password"/>
        <ImageView
            android:id="@+id/see_old_password"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/clear_old_password"
            android:src="@drawable/dra_loading"/>

        <ImageView
            android:id="@+id/clear_old_password"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/dra_loading"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/new_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/old_passowrd_layout"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="@string/modify_input_new_password"/>

    <RelativeLayout
        android:id="@+id/input_new_password_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password_text"
        android:background="@color/ainemo_white">

        <EditText
            android:id="@+id/input_new_password_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorTransparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/see_input_new_password"
            android:inputType="textPassword"
            android:hint="@string/modify_input_hint_new_password"/>
        <ImageView
            android:id="@+id/see_input_new_password"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/clear_input_new_password"
            android:src="@drawable/dra_loading"/>

        <ImageView
            android:id="@+id/clear_input_new_password"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/dra_loading"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_new_password_layout"
        android:background="@color/ainemo_white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_20"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"></View>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/confirm_password_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_layout"
        android:background="@color/ainemo_white">

        <EditText
            android:id="@+id/confirm_password_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorTransparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/see_confirm_password"
            android:inputType="textPassword"
            android:hint="@string/modify_old_password"/>
        <ImageView
            android:id="@+id/see_confirm_password"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/clear_confirm_password"
            android:src="@drawable/dra_loading"/>

        <ImageView
            android:id="@+id/clear_confirm_password"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/dra_loading"/>
    </RelativeLayout>

    <Button
        android:id="@+id/modify_password_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_layout"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_modify_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/modify_password_btn"/>


</android.support.constraint.ConstraintLayout>