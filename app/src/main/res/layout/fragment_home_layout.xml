<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zyzxsp.view.HeaderTitleView
        android:id="@+id/meet_header_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/nemo_green"
        app:headerCenterTitle="@string/title_str_meet"
        app:headerLeftDrawbleVisibility="gone">
    </com.zyzxsp.view.HeaderTitleView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/meet_layout"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/bg_meeting"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/meet_header_view">

        <EditText
            android:id="@+id/input_meet_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="@string/input_meet_number"
            android:background="@drawable/bg_meet_number"/>
        <Button
            android:id="@+id/join_meet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@+id/input_meet_number"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_join_meet"
            android:text="加入会议"/>

        <LinearLayout
            android:id="@+id/close_camera_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/join_meet"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp">
            <CheckBox
                android:id="@+id/close_camera"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:checked="false"
                android:clickable="true"
                android:button="@drawable/bg_radio_button"/>
        </LinearLayout>
        <TextView
            android:id="@+id/jion_meet_close_camera_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/join_meet"
            app:layout_constraintLeft_toRightOf="@+id/close_camera_layout"
            android:layout_marginTop="35dp"
            android:text="@string/injion_meet_close_camera"/>

        <LinearLayout
            android:id="@+id/join_meet_close_voice_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/join_meet"
            app:layout_constraintLeft_toRightOf="@+id/jion_meet_close_camera_text"
            app:layout_constraintRight_toRightOf="@+id/close_voice_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp">
            <CheckBox
                android:id="@+id/close_voice"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:checked="false"
                android:clickable="true"
                android:button="@drawable/bg_radio_button"/>
        </LinearLayout>
        <TextView
            android:id="@+id/close_voice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/join_meet"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:text="@string/injion_meet_close_voice"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>