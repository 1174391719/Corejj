<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zyzxsp">

    <!-- 存储 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 摄像头 & 麦克风 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- 保持唤醒 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 读取SN -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/login_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/login_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <!--<activity android:name=".activity.HomeActivity">-->
        <activity android:name=".activity.StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ZyLoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <!-- 登录界面 -->
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <!-- 登录界面 -->
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MyTestActivity"
            android:screenOrientation="portrait" />
        <!-- 快速反馈 -->
        <activity
            android:name=".activity.FeedbackActivity"
            android:screenOrientation="portrait" />
        <!-- 通话界面 -->
        <activity
            android:name=".activity.CallActivity"
            android:configChanges="screenSize|orientation"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity android:name=".activity.ZyMainActivity" />

        <!-- 被叫功能 -->
        <service android:name=".IncomingCallService" />

        <activity android:name=".activity.MyCloudMeetingActivity" />
        <activity android:name=".activity.AboutActivity" />
        <activity android:name=".activity.ModifyPasswordActivity" />
        <activity
            android:name=".activity.ZyCallActivity"
            android:configChanges="screenSize|orientation"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity android:name=".activity.UserInfoActivity" />
        <!--<activity android:name=".activity.ZyLoginActivity"></activity>-->
    </application>

</manifest>